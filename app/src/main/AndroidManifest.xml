<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bridou_n.beaconscanner">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".AppSingleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.beaconList.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.beaconList.MainActivity" />
        <activity android:name=".features.beaconList.SquartActivity" />
        <activity android:name=".features.beaconList.LungeActivity" />
        <activity android:name=".features.beaconList.choice" />
        <activity android:name=".features.beaconList.CalendarActivity" />
        <activity
            android:name=".features.beaconList.squartSetting"
            android:label="@string/title_activity_squart_setting"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".features.beaconList.lungeSetting"
            android:label="@string/title_activity_lunge_setting"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".features.beaconList.ropeTutorialActivity"
            android:label="@string/title_activity_rope_video"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".features.beaconList.lungeTutorialActivity"
            android:label="@string/title_activity_lunge_video"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".features.beaconList.squatTutorialActivity"
            android:label="@string/title_activity_squat_video"
            android:theme="@style/AppTheme" />

    </application>

</manifest>